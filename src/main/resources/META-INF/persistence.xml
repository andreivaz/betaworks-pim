<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="betaworks-pimPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>br.com.betaworkspim.person.model.Customer</class>
    <class>br.com.betaworkspim.person.model.Employee</class>
    <class>br.com.betaworkspim.person.model.EmployeeStatus</class>
    <class>br.com.betaworkspim.person.model.Username</class>
    <class>br.com.betaworkspim.product.model.Product</class>
    <class>br.com.betaworkspim.product.model.Sale</class>
    <class>br.com.betaworkspim.product.model.Stock</class>
    <class>br.com.betaworkspim.product.model.Supplier</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
        <property name="hibernate.dialect" 
                  value="org.hibernate.dialect.PostgreSQLDialect" />
        <property name="hibernate.show_sql" value="true" />
        <property name="hibernate.format_sql" value="true" />
        <property name="hibernate.hbm2ddl.auto" value="create" /> 
    </properties>
  </persistence-unit>
</persistence>
